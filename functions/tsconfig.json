{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true, // 有時可以幫助解決型別宣告問題

  },
  "compileOnSave": true,
  "include": [
    "src/**/&.ts"
  ]
}
